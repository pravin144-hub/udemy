<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (orders.length <= 0) { %>
                    <div class="no">
                        <h1>&nbsp;&nbsp;&nbsp;&nbsp;No Courses Enrolled Yet!</h1>
                    </div>

                    <% } else { %>
                        <h1>&nbsp;&nbsp;&nbsp;&nbsp;Courses Enrolled:</h1>
                        <ul class="orders">
                            <div class="grid">
                                <% orders.forEach(order => { %>
                                    <li class="orders__item">
                                        <!-- <h1>Order - #
                                            <%= order._id %> - <a href="/mycourses/<%= order._id %>">Invoice</a>
                                        </h1> -->
                                        <ul class="orders__products">
                                            <% order.products.forEach(p => { %>
                                                <li class="orders__products-item">
                                                    <%= p.product.title %>
                                                </li>
                                                <img src="/<%= p.product.imageUrl %>" alt="<%= p.product.title %>" style="margin-left:18%;"> &nbsp;
                                                <a href="#" class="btn" style="margin-left:34%;">Watch now!</a>
                                                <% }); %>
                                        </ul>
                                    </li>
                                    <% }); %>
                            </div>
                        </ul>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (errorMessage) {%>

                    <div class="user-message user-message--error">
                        <%= errorMessage %>
                    </div>

                    <% } %>
                        <div class="login-page">
                            <form class="login-form" action="/login" method="POST">
                                <h4>Log In to Your Udemy Account!</h4>
                                <hr>
                                <div class="form-control">
                                    <!-- <label for="email">E-Mail</label> -->
                                    <input class="<%=validationErrors.find(e => e.param === 'email') ? 'invalid' : ''%>" type="email" name="email" id="email" value="<%= oldInput.email %>" placeholder="Email">
                                </div>
                                <div class="form-control">
                                    <!-- <label for="password">Password</label> -->
                                    <input class="<%=validationErrors.find(e => e.param === 'password') ? 'invalid' : ''%>" type="password" name="password" id="password" value="<%= oldInput.password %>" placeholder="Password">
                                </div>
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn4" type="submit">Log In</button>
                            </form>
                            <div class="centered">
                                <h4>or <a href="/reset">Reset Password</a></h4>
                            </div>
                            <h4>Don't have an account?<a href="/signup">Signup</a></h4>
                        </div>
            </main>
            <%- include('../includes/end.ejs') %>